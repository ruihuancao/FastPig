<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layoutDirection="rtl"
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="end"
            android:layoutDirection="rtl"
            android:id="@+id/ll_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="end"
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fastupdate_close"
                />

        </LinearLayout>

        <ImageView
            android:scaleType="fitXY"
            android:minWidth="250dp"
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fastupdate_top_bg"/>

        <LinearLayout
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/fastupdate_info_bg"
            android:orientation="vertical">

            <TextView
                android:textDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="التحديث إلى الإصدار الجديد"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <TextView
                android:layout_marginTop="6dp"
                android:textDirection="rtl"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="الإصدار الحالي 1.2"
                android:textColor="#999999"
                android:textSize="12sp"/>

            <ScrollView
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none">

                <TextView
                    android:textDirection="rtl"
                    android:id="@+id/tv_update_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="1，xxxxxxxx\n2，ooooooooo"
                    android:textColor="#666"
                    android:textSize="14sp"/>
            </ScrollView>


            <Button
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fastupdate_update"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_ignore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/fastupdate_ignore"
                android:textColor="#666"
                android:textSize="14sp"
                android:visibility="gone"/>

            <com.ruihuan.fastupdate.view.NumberProgressBar
                android:id="@+id/npb"
                style="@style/UpdateAppNumberProgressBar_Yellow"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>